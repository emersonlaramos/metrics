{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "baseUrl": "../ui.frontend",
        "removeComments": true,
        "allowJs": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "paths": {
            "@helpers/*": ["./src/main/webpack/helpers/*"]
        } 
    },
    "include": [ "./src/**/*.ts" ]
}
