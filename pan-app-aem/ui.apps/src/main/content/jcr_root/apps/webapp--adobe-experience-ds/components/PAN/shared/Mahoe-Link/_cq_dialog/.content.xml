<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Mahoe Link"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[webapp--aem-institucional.editor]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tabConfigure
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Configurações Gerais"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <linkText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Texto"
                                name="./linkText"
                                value="" />
                            <hideLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldLabel="Esconder link?"
                                name="./hideLink"
                                text="Esconder link?"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true" />

                            <linkIconPosition
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                deleteHint="{Boolean}true"
                                fieldLabel="Posição do icone"
                                name="./linkIconPosition"
                                vertical="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <left
                                        jcr:primaryType="nt:unstructured"
                                        checked="{Boolean}true"
                                        text="Esquerda"
                                        value="left" />
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Direita"
                                        value="right" />
                                </items>
                            </linkIconPosition>
                            <linkIcon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Imagem em .SGV"
                                fieldLabel="Icone do Link"
                                fileNameParameter="./linkIconNameParameter"
                                fileReferenceParameter="./linkIconReferenceParameter"
                                mimeTypes="[image/svg]"
                                multiple="{Boolean}false"
                                name="./linkIcon"
                                title="icone do Link (opcional)"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true" />
                        </items>
                    </tabConfigure>
                    <tabEstilo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Estilo"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <wellGroup-mode
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                <items jcr:primaryType="nt:unstructured">
                                    <modeTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/text"
                                        margin="{Boolean}true"
                                        text="Mode (modo)" />
                                    <linkStyleBehavior
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        class="cq-dialog-dropdown-showhide-multival"
                                        cq-dialog-dropdown-showhide-target=".style-showhide-target"
                                        deleteHint="{Boolean}true"
                                        name="./linkStyleBehavior">
                                        <items jcr:primaryType="nt:unstructured">
                                            <link
                                                jcr:primaryType="nt:unstructured"
                                                checked="{Boolean}true"
                                                text="Herdar (automatico do tema escolhido no componente principal)"
                                                value="_inherit" />
                                            <scroll
                                                jcr:primaryType="nt:unstructured"
                                                text="Independente (Escolha manualmente)"
                                                value="_independent" />
                                        </items>
                                    </linkStyleBehavior>
                                    <styleContainer
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container"
                                        class="hide style-showhide-target"
                                        showhidetargetvalue="_independent">
                                        <items jcr:primaryType="nt:unstructured">
                                            <linkMode
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                deleteHint="{Boolean}true"
                                                name="./linkMode"
                                                vertical="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <none
                                                        jcr:primaryType="nt:unstructured"
                                                        text="None (Padrão - Sem modo)"
                                                        value="" />
                                                    <dark
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark (Branco - para fundos escuros)"
                                                        value="dark" />
                                                    <blue
                                                        jcr:primaryType="nt:unstructured"
                                                        checked="{Boolean}true"
                                                        text="Blue (Azul)"
                                                        value="blue" />
                                                </items>
                                            </linkMode>
                                        </items>
                                    </styleContainer>
                                </items>
                            </wellGroup-mode>
                            <wellGroup-size
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                <items jcr:primaryType="nt:unstructured">
                                    <sizeTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/text"
                                        margin="{Boolean}true"
                                        text="Size (Tamanho)" />
                                    <linkSize
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                        deleteHint="{Boolean}true"
                                        name="./linkSize"
                                        vertical="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <sm
                                                jcr:primaryType="nt:unstructured"
                                                checked="{Boolean}true"
                                                text="Small (Pequeno)"
                                                value="sm" />
                                            <md
                                                jcr:primaryType="nt:unstructured"
                                                text="Medium (Médio)"
                                                value="md" />
                                            <lg
                                                jcr:primaryType="nt:unstructured"
                                                text="Large (Grande)"
                                                value="lg" />
                                        </items>
                                    </linkSize>
                                </items>
                            </wellGroup-size>
                        </items>
                    </tabEstilo>
                    <tabBehavior
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Comportamento do botão"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <linkBehavior
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide-multival"
                                cq-dialog-dropdown-showhide-target=".type-showhide-target"
                                deleteHint="{Boolean}true"
                                fieldLabel="Escolha o comportamento do Link"
                                name="./linkBehavior"
                                vertical="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <link
                                        jcr:primaryType="nt:unstructured"
                                        checked="{Boolean}true"
                                        text="Link"
                                        value="_link" />
                                    <scroll
                                        jcr:primaryType="nt:unstructured"
                                        text="Scroll (ID da Seção)"
                                        value="_scroll" />
                                    <data_js
                                        jcr:primaryType="nt:unstructured"
                                        text="Formulário ou Modal"
                                        value="_data_js" />
                                </items>
                            </linkBehavior>
                            <linkContainer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="type-showhide-target"
                                showhidetargetvalue="_link">
                                <items jcr:primaryType="nt:unstructured">
                                    <linkHref
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        autocomplete="off"
                                        fieldDescription="ID seção = #ID_DA_SECAO"
                                        fieldLabel="CTA Link ou ID da seção para scroll"
                                        name="./linkHref"
                                        value="" />
                                    <linkTarget
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="CTA Link Target"
                                        name="./linkTarget">
                                        <items jcr:primaryType="nt:unstructured">
                                            <self
                                                jcr:primaryType="nt:unstructured"
                                                selected="{Boolean}true"
                                                text="Mesma Página"
                                                value="_self" />
                                            <blank
                                                jcr:primaryType="nt:unstructured"
                                                text="Nova Aba"
                                                value="_blank" />
                                        </items>
                                    </linkTarget>
                                </items>
                            </linkContainer>
                            <scrolLContainer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="type-showhide-target"
                                showhidetargetvalue="_scroll">
                                <items jcr:primaryType="nt:unstructured">
                                    <linkScroll
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        autocomplete="off"
                                        fieldDescription="ID seção = #ID_DA_SECAO"
                                        fieldLabel="ID da seção para scroll"
                                        name="./linkScroll"
                                        value="#id_section" />
                                </items>
                            </scrolLContainer>
                            <dataJSContainer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="type-showhide-target"
                                showhidetargetvalue="_data_js">
                                <items jcr:primaryType="nt:unstructured">
                                    <linkDataJS
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        autocomplete="off"
                                        fieldLabel="Atributo para abertura de Forms ou Modals - 'data-js'"
                                        name="./linkDataJS"
                                        value="" />
                                </items>
                            </dataJSContainer>
                        </items>
                    </tabBehavior>
                    <tabSeo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="SEO"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <linkName
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Nome (atributo NAME do HTML)"
                                name="./linkame"
                                value="" />
                            <linkTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Atributo Title"
                                name="./linkTitle"
                                value="#" />
                            <linkDataTrack
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="link Data Track"
                                name="./linkDataTrack"
                                value="#" />
                        </items>
                    </tabSeo>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>