<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Propriedades Card-Estatico-CardImagemInteira"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <Tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <tab-imagem
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Imagem"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <altImagem
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="ALT imagem"
                                name="./altImagem"
                                value="#"/>
                            <imageMobileWebp
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Imagem Mobile WEBP (375x488)"
                                fileNameParameter="./imageMobileNameParameterWebp"
                                fileReferenceParameter="./imageMobileReferenceWebp"
                                mimeTypes="[image/webp]"
                                multiple="{Boolean}false"
                                name="./imageMobileWebp"
                                title="Imagem Mobile WEBP"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <imageDesktopWebp
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Imagem Desktop WEBP (1440x700)"
                                fileNameParameter="./imageDesktopNameParameterWebp"
                                fileReferenceParameter="./imageDesktopReferenceWebp"
                                mimeTypes="[image/webp]"
                                multiple="{Boolean}false"
                                name="./imageDesktopWebp"
                                title="Imagem Desktop WEBP"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                        </items>
                    </tab-imagem>
                    <tab-card
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Card"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <IconeCard
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Icone deve ser preto"
                                fieldLabel="Icone do Card (32 x 32) -- .SVG"
                                fileNameParameter="./iconCardNameParameterSvg"
                                fileReferenceParameter="./iconCardReferenceSvg"
                                mimeTypes="[image/svg]"
                                multiple="{Boolean}false"
                                name="./iconCard"
                                title="icone do Botão (opcional)"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <altIcon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="ALT Icon"
                                name="./altIcon"
                                value="#"/>
                            <TituloCard
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Titulo"
                                name="./tituloCard"
                                value="Lorem ipsum"/>
                            <TextoCard
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Texto"
                                name="./textoCard"
                                value="Lorem ipsum dolor sit amet, consectetur adipiscing elit."/>
                            <LinkCard
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="ID seção = #ID_DA_SECAO"
                                fieldLabel="CTA Link ou ID da seção para scroll"
                                name="./hrefCard"/>
                            <TargetCard
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="CTA Link Target (no caso de link)"
                                name="./targetCard">
                                <items jcr:primaryType="nt:unstructured">
                                    <self
                                        jcr:primaryType="nt:unstructured"
                                        selected="{Boolean}true"
                                        text="Mesma Página"
                                        value="_self"/>
                                    <blank
                                        jcr:primaryType="nt:unstructured"
                                        text="Nova Aba"
                                        value="_blank"/>
                                </items>
                            </TargetCard>
                        </items>
                    </tab-card>
                    <tab-seo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="SEO"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <sectionID
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                autofocus="{Boolean}true"
                                fieldLabel="ID da Seção"
                                name="./sectionID"
                                value=""/>
                        </items>
                    </tab-seo>
                </items>
            </Tabs>
        </items>
    </content>
</jcr:root>
