<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Propriedades Highlight-TextoCentral"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[webapp--adobe-experience-ds.editor]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <Tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <tab-variantes
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Variantes"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <colorVariant
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                deleteHint="{Boolean}true"
                                fieldLabel="Cores de fundo"
                                name="./colorVariant"
                                vertical="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <branco
                                        jcr:primaryType="nt:unstructured"
                                        checked="{Boolean}true"
                                        text="Branco"
                                        value="bg-branco" />
                                    <azul
                                        jcr:primaryType="nt:unstructured"
                                        text="Azul"
                                        value="bg-azul" />
                                    <preto
                                        jcr:primaryType="nt:unstructured"
                                        text="Preto"
                                        value="bg-preto" />
                                </items>
                            </colorVariant>
                            <button
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                deleteHint="{Boolean}true"
                                fieldLabel="Utilizar Botão?"
                                name="./button"
                                vertical="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <sim
                                        jcr:primaryType="nt:unstructured"
                                        text="Sim"
                                        value="yes" />
                                    <nao
                                        jcr:primaryType="nt:unstructured"
                                        text="Não"
                                        value="no" />
                                </items>
                            </button>
                            <alignTitulo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                deleteHint="{Boolean}true"
                                fieldLabel="Alinhar Título"
                                name="./alignTitulo"
                                vertical="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <esquerda
                                        jcr:primaryType="nt:unstructured"
                                        text="Esquerda"
                                        value="text-align-left" />
                                    <centro
                                        jcr:primaryType="nt:unstructured"
                                        text="Centro"
                                        value="text-align-center" />
                                    <direita
                                        jcr:primaryType="nt:unstructured"
                                        text="Direita"
                                        value="text-align-right" />
                                </items>
                            </alignTitulo>
                            <alignTexto
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                deleteHint="{Boolean}true"
                                fieldLabel="Alinhar Texto"
                                name="./alignTexto"
                                vertical="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <esquerda
                                        jcr:primaryType="nt:unstructured"
                                        text="Esquerda"
                                        value="text-align-left" />
                                    <centro
                                        jcr:primaryType="nt:unstructured"
                                        text="Centro"
                                        value="text-align-center" />
                                    <direita
                                        jcr:primaryType="nt:unstructured"
                                        text="Direita"
                                        value="text-align-right" />
                                </items>
                            </alignTexto>
                        </items>
                    </tab-variantes>
                    <tab-textos
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Textos"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <Titulo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Titulo"
                                name="./titulo"
                                value="Exemplo de título com no máximo 3 linhas aqui!" />
                            <Texto
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldLabel="Texto"
                                name="./texto"
                                removeSingleParagraphContainer="{Boolean}true"
                                useFixedInlineToolbar="{Boolean}true"
                                value="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis ullamcorper fermentum"
                                fieldDescription="Leia a documentação para entender como utilizar cada função dessa seção">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <edit
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <findreplace
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <format
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <subsuperscript
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <justify
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <links
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <lists
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <misctools
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <paraformat
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <table
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <tracklinks
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,format#underline,links#modifylink,links#unlink,#styles,#edit,#findreplace,#image,#subsuperscript,#justify,#lists,#misctools,#paraformat,#table,#tracklinks]">
                                        </inline>
                                    </cui>
                                </uiSettings>
                            </Texto>
                        </items>
                    </tab-textos>
                    <tab-seo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="SEO"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <sectionID
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                autofocus="{Boolean}true"
                                fieldLabel="ID da Seção"
                                name="./sectionID"
                                value="" />
                            <tagTitulo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Tag do titulo"
                                name="./tagTitulo">
                                <items jcr:primaryType="nt:unstructured">
                                    <p
                                        jcr:primaryType="nt:unstructured"
                                        selected="true"
                                        text="P"
                                        value="p" />
                                    <h1
                                        jcr:primaryType="nt:unstructured"
                                        text="H1"
                                        value="h1" />
                                    <h2
                                        jcr:primaryType="nt:unstructured"
                                        text="H2"
                                        value="h2" />
                                    <h3
                                        jcr:primaryType="nt:unstructured"
                                        text="H3"
                                        value="h3" />
                                    <h4
                                        jcr:primaryType="nt:unstructured"
                                        text="H4"
                                        value="h4" />
                                    <h5
                                        jcr:primaryType="nt:unstructured"
                                        text="H5"
                                        value="h5" />
                                    <h6
                                        jcr:primaryType="nt:unstructured"
                                        text="H6"
                                        value="h6" />
                                </items>
                            </tagTitulo>
                        </items>
                    </tab-seo>
                </items>
            </Tabs>
        </items>
    </content>
</jcr:root>