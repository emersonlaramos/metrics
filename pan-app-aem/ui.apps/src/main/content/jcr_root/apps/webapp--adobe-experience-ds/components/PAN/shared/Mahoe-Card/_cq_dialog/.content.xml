<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Mahoe Card"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[webapp--aem-institucional.editor]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tabConfigure
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Configurações Gerais"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <cardPalavraDestaque
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Palavra destaque"
                                name="./cardPalavraDestaque"
                                value="" />
                            <cardTitulo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Título"
                                name="./cardTitulo"
                                value="" />
                            <cardText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Texto card"
                                name="./cardText"
                                value="" />
                            <cardHref
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                autocomplete="off"
                                fieldLabel="Link card"
                                name="./cardHref"
                                value="" />
                            <cardTarget
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Card Link Target"
                                name="./cardTarget">
                                <items jcr:primaryType="nt:unstructured">
                                    <self
                                        jcr:primaryType="nt:unstructured"
                                        selected="{Boolean}true"
                                        text="Mesma Página"
                                        value="_self" />
                                    <blank
                                        jcr:primaryType="nt:unstructured"
                                        text="Nova Aba"
                                        value="_blank" />
                                </items>
                            </cardTarget>
                        </items>
                    </tabConfigure>
                    <tabVariant
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Variações"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <cardVariantBehavior
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide-multival"
                                cq-dialog-dropdown-showhide-target=".variant-showhide-target"
                                deleteHint="{Boolean}true"
                                name="./cardVariantBehavior">
                                <items jcr:primaryType="nt:unstructured">
                                    <normal
                                        jcr:primaryType="nt:unstructured"
                                        checked="{Boolean}true"
                                        text="Normal (Sem imagem)"
                                        value="normal" />
                                    <illustration
                                        jcr:primaryType="nt:unstructured"
                                        checked="{Boolean}false"
                                        text="Ilustração do Card"
                                        value="illustration" />
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        checked="{Boolean}false"
                                        text="Imagem de fundo do Card"
                                        value="image" />
                                </items>
                            </cardVariantBehavior>
                            <cardIllustrationContainer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="variant-showhide-target"
                                showhidetargetvalue="illustration">
                                <items jcr:primaryType="nt:unstructured">
                                    <cardIllustrationImage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        autoStart="{Boolean}false"
                                        class="cq-droptarget"
                                        fieldDescription="Imagem em .WEBP"
                                        fieldLabel="Ilustração do Card"
                                        fileNameParameter="./cardIllustrationImageNameParameter"
                                        fileReferenceParameter="./cardIllustrationImageReference"
                                        mimeTypes="[image/webp]"
                                        multiple="{Boolean}false"
                                        name="./cardIllustrationImage"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="{Boolean}true" />
                                </items>
                            </cardIllustrationContainer>
                            <cardImageContainer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="variant-showhide-target"
                                showhidetargetvalue="image">
                                <items jcr:primaryType="nt:unstructured">
                                    <cardImage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        autoStart="{Boolean}false"
                                        class="cq-droptarget"
                                        fieldDescription="Imagem em .WEBP"
                                        fieldLabel="Imagem de fundo do Card"
                                        fileNameParameter="./cardImageNameParameter"
                                        fileReferenceParameter="./cardImageReference"
                                        mimeTypes="[image/webp]"
                                        multiple="{Boolean}false"
                                        name="./cardImage"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="{Boolean}true" />
                                </items>
                            </cardImageContainer>
                        </items>
                    </tabVariant>
                    <tabIcone
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Ícone"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <cardIcon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Imagem em .SGV (32px-32px)"
                                fieldLabel="Icone do Card"
                                fileNameParameter="./cardIconNameParameter"
                                fileReferenceParameter="./cardIconReference"
                                mimeTypes="[image/svg]"
                                multiple="{Boolean}false"
                                name="./cardIcon"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true" />
                        </items>
                    </tabIcone>
                    <tabEstilo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Estilo"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <wellGroup-mode
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                <items jcr:primaryType="nt:unstructured">
                                    <modeTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/text"
                                        margin="{Boolean}true"
                                        text="Mode (modo)" />
                                    <cardStyleBehavior
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        class="cq-dialog-dropdown-showhide-multival"
                                        cq-dialog-dropdown-showhide-target=".style-showhide-target"
                                        deleteHint="{Boolean}true"
                                        name="./cardStyleBehavior">
                                        <items jcr:primaryType="nt:unstructured">
                                            <inherit
                                                jcr:primaryType="nt:unstructured"
                                                checked="{Boolean}true"
                                                text="Herdar (automatico do tema escolhido no componente principal)"
                                                value="_inherit" />
                                            <independent
                                                jcr:primaryType="nt:unstructured"
                                                text="Independente (Escolha manualmente)"
                                                value="_independent" />
                                        </items>
                                    </cardStyleBehavior>
                                    <styleContainer
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container"
                                        class="hide style-showhide-target"
                                        showhidetargetvalue="_independent">
                                        <items jcr:primaryType="nt:unstructured">
                                            <cardMode
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                deleteHint="{Boolean}true"
                                                name="./cardMode"
                                                vertical="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <none
                                                        jcr:primaryType="nt:unstructured"
                                                        text="None (Padrão - Cinza)"
                                                        value="" />
                                                    <dark
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark"
                                                        value="dark" />
                                                    <blue
                                                        jcr:primaryType="nt:unstructured"
                                                        checked="{Boolean}true"
                                                        text="Blue (Azul)"
                                                        value="blue" />
                                                </items>
                                            </cardMode>
                                        </items>
                                    </styleContainer>
                                </items>
                            </wellGroup-mode>
                            <wellGroup-estilo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                <items jcr:primaryType="nt:unstructured">
                                    <estiloTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/text"
                                        margin="{Boolean}true"
                                        text="Style (estilo)" />
                                    <cardStyle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                        name="./cardStyle">
                                        <items jcr:primaryType="nt:unstructured">
                                            <lined
                                                jcr:primaryType="nt:unstructured"
                                                selected="{Boolean}true"
                                                text="Contorno (Sem fundo)"
                                                value="lined" />
                                            <filled
                                                jcr:primaryType="nt:unstructured"
                                                text="Preenchido (Com fundo)"
                                                value="filled" />
                                        </items>
                                    </cardStyle>
                                </items>
                            </wellGroup-estilo>
                            <wellGroup-size
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                <items jcr:primaryType="nt:unstructured">
                                    <sizeTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/text"
                                        margin="{Boolean}true"
                                        text="Size (Tamanho)" />
                                    <cardSize
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                        deleteHint="{Boolean}true"
                                        name="./cardSize"
                                        vertical="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <xs
                                                jcr:primaryType="nt:unstructured"
                                                text="Extra Small (Extra Pequeno)"
                                                value="xsmall" />
                                            <sm
                                                jcr:primaryType="nt:unstructured"
                                                checked="{Boolean}true"
                                                text="Small (Pequeno)"
                                                value="small" />
                                            <md
                                                jcr:primaryType="nt:unstructured"
                                                text="Medium (Médio)"
                                                value="medium" />
                                            <lg
                                                jcr:primaryType="nt:unstructured"
                                                text="Large (Grande)"
                                                value="large" />
                                        </items>
                                    </cardSize>
                                </items>
                            </wellGroup-size>
                        </items>
                    </tabEstilo>
                    <tabSeo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="SEO"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <cardTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Atributo Title"
                                name="./cardTitle"
                                value="#" />
                            <cardDataTrack
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Card Data Track"
                                name="./cardDataTrack"
                                value="#" />
                        </items>
                    </tabSeo>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>