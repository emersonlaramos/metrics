<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Propriedades Conteudo-Topicos"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <Tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <tab-variantes
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Variantes"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <colorVariant
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                deleteHint="{Boolean}true"
                                fieldLabel="Cores de fundo"
                                name="./colorVariant"
                                vertical="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <branco
                                        jcr:primaryType="nt:unstructured"
                                        checked="{Boolean}true"
                                        text="Branco"
                                        value="bg-branco" />
                                    <cinza
                                        jcr:primaryType="nt:unstructured"
                                        text="Cinza"
                                        value="bg-cinza" />
                                    <azul
                                        jcr:primaryType="nt:unstructured"
                                        text="Azul"
                                        value="bg-azul" />
                                    <preto
                                        jcr:primaryType="nt:unstructured"
                                        text="Preto"
                                        value="bg-preto" />
                                </items>
                            </colorVariant>
                        </items>
                    </tab-variantes>
                    <tab-textos
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Título"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <Titulo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Titulo"
                                name="./titulo"
                                value="" />
                        </items>
                    </tab-textos>
                    <tab-topicos
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Topicos"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <presets
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <list
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldLabel="Insira os Topícos">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./topicos">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <iconeTopico
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                            autoStart="{Boolean}false"
                                                            class="cq-droptarget"
                                                            fieldDescription="Icone"
                                                            fieldLabel="Icone 1 (32 x 32) -- .SVG"
                                                            fileNameParameter="./iconNameParameterSvg"
                                                            fileReferenceParameter="./iconTopicoReferenceSvg"
                                                            mimeTypes="[image/svg]"
                                                            multiple="{Boolean}false"
                                                            name="./iconTopico"
                                                            title="icone"
                                                            uploadUrl="${suffix.path}"
                                                            useHTML5="{Boolean}true" />
                                                        <altIcon
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            autocomplete="off"
                                                            fieldLabel="ALT Icon 1"
                                                            name="./altIconTopico"
                                                            value="#" />
                                                        <tituloTopico
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            autocomplete="off"
                                                            fieldLabel="Titulo Topico 1"
                                                            name="./tituloTopico"
                                                            value="" />
                                                        <textoTopico
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                            fieldLabel="Texto topico 1"
                                                            name="./textoTopico"
                                                            removeSingleParagraphContainer="{Boolean}true"
                                                            required="true"
                                                            useFixedInlineToolbar="{Boolean}true">
                                                            <rtePlugins
                                                                jcr:primaryType="nt:unstructured">
                                                                <format
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="bold,italic" />
                                                                <justify
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="-" />
                                                                <links
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="modifylink,unlink" />
                                                                <lists
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="*" />
                                                                <tracklinks
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="*" />
                                                            </rtePlugins>
                                                            <uiSettings
                                                                jcr:primaryType="nt:unstructured">
                                                                <cui
                                                                    jcr:primaryType="nt:unstructured">
                                                                    <inline
                                                                        jcr:primaryType="nt:unstructured"
                                                                        toolbar="[format#bold,format#italic,format#underline,#justify,#lists,links#modifylink,links#unlink,#paraformat]">
                                                                        <popovers
                                                                            jcr:primaryType="nt:unstructured">
                                                                            <justify
                                                                                jcr:primaryType="nt:unstructured"
                                                                                items="[justify#justifyleft,justify#justifycenter,justify#justifyright,justify#justifyjustify]"
                                                                                ref="justify" />
                                                                            <lists
                                                                                jcr:primaryType="nt:unstructured"
                                                                                items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                                                ref="lists" />
                                                                        </popovers>
                                                                    </inline>
                                                                </cui>
                                                            </uiSettings>
                                                        </textoTopico>

                                                        <iconeTopico2
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                            autoStart="{Boolean}false"
                                                            class="cq-droptarget"
                                                            fieldDescription="Icone do tópico 2"
                                                            fieldLabel="Icone 2 (32 x 32) -- .SVG"
                                                            fileNameParameter="./iconNameParameterSvg2"
                                                            fileReferenceParameter="./iconTopicoReferenceSvg2"
                                                            mimeTypes="[image/svg]"
                                                            multiple="{Boolean}false"
                                                            name="./iconTopico2"
                                                            title="icone 2"
                                                            uploadUrl="${suffix.path}"
                                                            useHTML5="{Boolean}true" />
                                                        <altIcon2
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            autocomplete="off"
                                                            fieldLabel="ALT Icon 2"
                                                            name="./altIconTopico2"
                                                            value="#" />
                                                        <tituloTopico2
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            autocomplete="off"
                                                            fieldLabel="Titulo Topico 2"
                                                            name="./tituloTopico2"
                                                            value="" />
                                                        <textoTopico2
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                            fieldLabel="Texto topico 2"
                                                            name="./textoTopico2"
                                                            removeSingleParagraphContainer="{Boolean}true"
                                                            required="true"
                                                            useFixedInlineToolbar="{Boolean}true">
                                                            <rtePlugins
                                                                jcr:primaryType="nt:unstructured">
                                                                <format
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="bold,italic" />
                                                                <justify
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="-" />
                                                                <links
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="modifylink,unlink" />
                                                                <lists
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="*" />
                                                                <tracklinks
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="*" />
                                                            </rtePlugins>
                                                            <uiSettings
                                                                jcr:primaryType="nt:unstructured">
                                                                <cui
                                                                    jcr:primaryType="nt:unstructured">
                                                                    <inline
                                                                        jcr:primaryType="nt:unstructured"
                                                                        toolbar="[format#bold,format#italic,format#underline,#justify,#lists,links#modifylink,links#unlink,#paraformat]">
                                                                        <popovers
                                                                            jcr:primaryType="nt:unstructured">
                                                                            <justify
                                                                                jcr:primaryType="nt:unstructured"
                                                                                items="[justify#justifyleft,justify#justifycenter,justify#justifyright,justify#justifyjustify]"
                                                                                ref="justify" />
                                                                            <lists
                                                                                jcr:primaryType="nt:unstructured"
                                                                                items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                                                ref="lists" />
                                                                        </popovers>
                                                                    </inline>
                                                                </cui>
                                                            </uiSettings>
                                                        </textoTopico2>
                                                    </items>
                                                </field>
                                            </list>
                                        </items>
                                    </column>
                                </items>
                            </presets>
                        </items>
                    </tab-topicos>
                    <tab-seo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="SEO"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <sectionID
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                autofocus="{Boolean}true"
                                fieldLabel="ID da Seção"
                                name="./sectionID"
                                value="" />
                            <tagTitulo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Tag do titulo"
                                name="./tagTitulo">
                                <items jcr:primaryType="nt:unstructured">
                                    <h1
                                        jcr:primaryType="nt:unstructured"
                                        selected="true"
                                        text="H1"
                                        value="h1" />
                                    <h2
                                        jcr:primaryType="nt:unstructured"
                                        text="H2"
                                        value="h2" />
                                    <h3
                                        jcr:primaryType="nt:unstructured"
                                        text="H3"
                                        value="h3" />
                                    <h4
                                        jcr:primaryType="nt:unstructured"
                                        text="H4"
                                        value="h4" />
                                    <h5
                                        jcr:primaryType="nt:unstructured"
                                        text="H5"
                                        value="h5" />
                                    <h6
                                        jcr:primaryType="nt:unstructured"
                                        text="H6"
                                        value="h6" />
                                </items>
                            </tagTitulo>
                        </items>
                    </tab-seo>
                </items>
            </Tabs>
        </items>
    </content>
</jcr:root>