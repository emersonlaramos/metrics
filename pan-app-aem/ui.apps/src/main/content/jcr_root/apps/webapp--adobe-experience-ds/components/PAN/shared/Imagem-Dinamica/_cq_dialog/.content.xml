<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Imagem Dinâmica"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <textInfo-endMessage
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/text"
                text="Apenas arquivos: .webp, .svg, .gif"
                margin="{Boolean}true"
            />
            <Tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <tab-imagem-desktop
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Desktop"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <altImagemDesktop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="ALT imagem (máximo 50 caracteres)"
                                name="./altImagemDesktop"
                                value="#" />
                            <imageDesktop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Imagem Desktop"
                                fileNameParameter="./imageDesktopNameParameter"
                                fileReferenceParameter="./imageDesktopReference"
                                mimeTypes="[image/webp,image/svg+xml,image/gif]"
                                multiple="{Boolean}false"
                                name="./imageDesktop"
                                title="Imagem Desktop"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true" />
                        </items>
                    </tab-imagem-desktop>
                    <tab-imagem-mobile
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Mobile"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <altImagemMobile
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="ALT imagem (máximo 50 caracteres)"
                                name="./altImagemMobile"
                                value="#" />
                            <imageMobile
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Imagem Mobile"
                                fileNameParameter="./imageMobileNameParameter"
                                fileReferenceParameter="./imageMobileReference"
                                mimeTypes="[image/webp,image/svg+xml,image/gif]"
                                multiple="{Boolean}false"
                                name="./imageMobile"
                                title="Imagem Mobile"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true" />
                        </items>
                    </tab-imagem-mobile>
                </items>
            </Tabs>
            <geral
                jcr:primaryType="nt:unstructured"
                jcr:title="Geral"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <lazyload
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Ao aplicar o lazyload, é adicionar um atributo na tag IMG fazendo com que a imagem só carregue quando passar pelo viewport do cliente"
                        name="./lazyload"
                        text="Aplicar Lazyload?"
                        uncheckedValue=""
                        value="lazy" />
                </items>
            </geral>
        </items>
    </content>
</jcr:root>