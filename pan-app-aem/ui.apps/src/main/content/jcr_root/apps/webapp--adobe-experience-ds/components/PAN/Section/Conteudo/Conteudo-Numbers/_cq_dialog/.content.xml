<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Propriedades Conteudo-Numbers"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <Tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <tab-variantes
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Variantes"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <colorVariant
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                deleteHint="{Boolean}true"
                                fieldLabel="Cores de fundo"
                                name="./colorVariant"
                                vertical="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <branco
                                        jcr:primaryType="nt:unstructured"
                                        checked="{Boolean}true"
                                        text="Branco"
                                        value="bg-branco" />
                                    <azul
                                        jcr:primaryType="nt:unstructured"
                                        text="Azul"
                                        value="bg-azul" />
                                    <preto
                                        jcr:primaryType="nt:unstructured"
                                        text="Preto"
                                        value="bg-preto" />
                                </items>
                            </colorVariant>
                            <positionVariant
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                deleteHint="{Boolean}true"
                                fieldLabel="Posição da Imagem"
                                name="./positionVariant"
                                vertical="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <esquerda
                                        jcr:primaryType="nt:unstructured"
                                        text="Imagem na Esquerda"
                                        value="esquerda" />
                                    <direita
                                        jcr:primaryType="nt:unstructured"
                                        checked="{Boolean}true"
                                        text="Imagem na Direita"
                                        value="direita" />
                                </items>
                            </positionVariant>
                        </items>
                    </tab-variantes>
                    <tab-textos
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Textos"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <PalavraDestaque
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                autofocus="{Boolean}true"
                                fieldLabel="Palavra Destaque"
                                name="./palavraDestaque"
                                value="Palavra destaque" />
                            <Titulo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Titulo"
                                name="./titulo"
                                value="Exemplo de título com no máximo 3 linhas aqui!" />
                            <Paragrafo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldLabel="Parágrafo"
                                name="./paragrafo"
                                removeSingleParagraphContainer="{Boolean}true"
                                useFixedInlineToolbar="{Boolean}true"
                                value="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis ullamcorper fermentum,">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <format
                                        jcr:primaryType="nt:unstructured"
                                        features="bold,italic" />
                                    <justify
                                        jcr:primaryType="nt:unstructured"
                                        features="-" />
                                    <links
                                        jcr:primaryType="nt:unstructured"
                                        features="modifylink,unlink" />
                                    <lists
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <tracklinks
                                        jcr:primaryType="nt:unstructured"
                                        features="*" />
                                    <paraformat
                                        jcr:primaryType="nt:unstructured"
                                        features="*">
                                        <formats jcr:primaryType="nt:unstructured">
                                            <default_p
                                                jcr:primaryType="nt:unstructured"
                                                description="Paragraph"
                                                tag="p" />
                                        </formats>
                                    </paraformat>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,format#underline,#justify,#lists,links#modifylink,links#unlink,#paraformat]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <justify
                                                    jcr:primaryType="nt:unstructured"
                                                    items="[justify#justifyleft,justify#justifycenter,justify#justifyright,justify#justifyjustify]"
                                                    ref="justify" />
                                                <lists
                                                    jcr:primaryType="nt:unstructured"
                                                    items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                    ref="lists" />
                                            </popovers>
                                        </inline>
                                    </cui>
                                </uiSettings>
                            </Paragrafo>
                        </items>
                    </tab-textos>
                    <tab-cards
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Cards"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <IconeCard1
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                    autoStart="{Boolean}false"
                                    class="cq-droptarget"
                                    fieldLabel="Ícone do Card 1 (32 x 32) -- .SVG"
                                    fileNameParameter="./iconCard1NameParameterSvg"
                                    fileReferenceParameter="./iconCard1ReferenceSvg"
                                    mimeTypes="[image/svg]"
                                    multiple="{Boolean}false"
                                    name="./iconCard1"
                                    title="Ícone do Card 1"
                                    uploadUrl="${suffix.path}"
                                    useHTML5="{Boolean}true" />
                                <TituloCard1
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    autocomplete="off"
                                    autofocus="{Boolean}true"
                                    fieldLabel="Titulo Card 1"
                                    name="./tituloCard1"
                                    value="" />
                                <textoCard1
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    autocomplete="off"
                                    fieldLabel="Texto card 1"
                                    name="./texto1"
                                    value="" />
                            <IconeCard2
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                    autoStart="{Boolean}false"
                                    class="cq-droptarget"
                                    fieldLabel="Ícone do Card 2 (32 x 32) -- .SVG"
                                    fileNameParameter="./iconCard2NameParameterSvg"
                                    fileReferenceParameter="./iconCard2ReferenceSvg"
                                    mimeTypes="[image/svg]"
                                    multiple="{Boolean}false"
                                    name="./iconCard2"
                                    title="Ícone do Card 2"
                                    uploadUrl="${suffix.path}"
                                    useHTML5="{Boolean}true" />
                                <TituloCard2
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    autocomplete="off"
                                    autofocus="{Boolean}true"
                                    fieldLabel="Titulo Card 2"
                                    name="./tituloCard2"
                                    value="" />
                                <textoCard2
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    autocomplete="off"
                                    fieldLabel="Texto card 2"
                                    name="./texto2"
                                    value="" />
                                <IconeCard3
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                    autoStart="{Boolean}false"
                                    class="cq-droptarget"
                                    fieldLabel="Ícone do Card 3 (32 x 32) -- .SVG"
                                    fileNameParameter="./iconCard3NameParameterSvg"
                                    fileReferenceParameter="./iconCard3ReferenceSvg"
                                    mimeTypes="[image/svg]"
                                    multiple="{Boolean}false"
                                    name="./iconCard3"
                                    title="Ícone do Card 3"
                                    uploadUrl="${suffix.path}"
                                    useHTML5="{Boolean}true" />
                                <TituloCard3
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    autocomplete="off"
                                    autofocus="{Boolean}true"
                                    fieldLabel="Titulo Card 3"
                                    name="./tituloCard3"
                                    value="" />
                                <textoCard3
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    autocomplete="off"
                                    fieldLabel="Texto card 3"
                                    name="./texto3"
                                    value="" />
                                <IconeCard4
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                    autoStart="{Boolean}false"
                                    class="cq-droptarget"
                                    fieldLabel="Ícone do Card 4 (32 x 32) -- .SVG"
                                    fileNameParameter="./iconCard4NameParameterSvg"
                                    fileReferenceParameter="./iconCard4ReferenceSvg"
                                    mimeTypes="[image/svg]"
                                    multiple="{Boolean}false"
                                    name="./iconCard4"
                                    title="Ícone do Card 4"
                                    uploadUrl="${suffix.path}"
                                    useHTML5="{Boolean}true" />
                                <TituloCard4
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    autocomplete="off"
                                    autofocus="{Boolean}true"
                                    fieldLabel="Titulo Card 4"
                                    name="./tituloCard4"
                                    value="" />
                                <textoCard4
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    autocomplete="off"
                                    fieldLabel="Texto card 4"
                                    name="./texto4"
                                    value="" />
                        </items>
                    </tab-cards>
                    <tab-imagem
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Imagem"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <BannerPrimeiraDobra
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Elementos de primeira dobra se trata do primeiro componente a aparecer na página"
                                name="./bannerId"
                                text="Está sendo usado como Banner de primeira dobra ?"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true" />
                            <lazyload
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Ao aplicar o lazyload, é adicionar um atributo na tag IMG fazendo com que a imagem só carregue quando passar pelo viewport do cliente"
                                name="./lazyload"
                                text="Aplicar Lazyload?"
                                checked="{Boolean}true"
                                value="lazy" />
                            <altImagem
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="ALT imagem"
                                name="./altImagem"
                                value="#" />
                            <titleImagem
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                fieldLabel="Title da imagem"
                                name="./titleImagem"
                                value="" />
                            <imageMobileWebp
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Resolução referente a 6 colunas"
                                fieldLabel="Imagem Mobile WEBP/GIF (375 x 364)"
                                fileNameParameter="./imageMobileNameParameterWebp"
                                fileReferenceParameter="./imageMobileReferenceWebp"
                                mimeTypes="[image/webp,image/gif]"
                                multiple="{Boolean}false"
                                name="./imageMobileWebp"
                                title="Imagem Mobile WEBP"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true" />
                            <imageDesktopWebp
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Resolução referente a 6 colunas"
                                fieldLabel="Imagem Desktop WEBP/GIF (710 x 688)"
                                fileNameParameter="./imageDesktopNameParameterWebp"
                                fileReferenceParameter="./imageDesktopReferenceWebp"
                                mimeTypes="[image/webp,image/gif]"
                                multiple="{Boolean}false"
                                name="./imageDesktopWebp"
                                title="Imagem Desktop WEBP"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true" />
                        </items>
                    </tab-imagem>
                    <tab-seo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="SEO"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <sectionID
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                autocomplete="off"
                                autofocus="{Boolean}true"
                                fieldLabel="ID da Seção"
                                name="./sectionID"
                                value="" />
                            <tagPalavraDestaque
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Tag da Palavra destaque"
                                name="./tagPalavraDestaque">
                                <items jcr:primaryType="nt:unstructured">
                                    <p
                                        jcr:primaryType="nt:unstructured"
                                        text="P"
                                        value="p" />
                                    <h1
                                        jcr:primaryType="nt:unstructured"
                                        text="H1"
                                        value="h1" />
                                    <h2
                                        jcr:primaryType="nt:unstructured"
                                        selected="true"
                                        text="H2"
                                        value="h2" />
                                    <h3
                                        jcr:primaryType="nt:unstructured"
                                        text="H3"
                                        value="h3" />
                                    <h4
                                        jcr:primaryType="nt:unstructured"
                                        text="H4"
                                        value="h4" />
                                    <h5
                                        jcr:primaryType="nt:unstructured"
                                        text="H5"
                                        value="h5" />
                                    <h6
                                        jcr:primaryType="nt:unstructured"
                                        text="H6"
                                        value="h6" />
                                </items>
                            </tagPalavraDestaque>
                            <tagTitulo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Tag do titulo"
                                name="./tagTitulo">
                                <items jcr:primaryType="nt:unstructured">
                                    <p
                                        jcr:primaryType="nt:unstructured"
                                        text="P"
                                        value="p" />
                                    <h1
                                        jcr:primaryType="nt:unstructured"
                                        selected="true"
                                        text="H1"
                                        value="h1" />
                                    <h2
                                        jcr:primaryType="nt:unstructured"
                                        text="H2"
                                        value="h2" />
                                    <h3
                                        jcr:primaryType="nt:unstructured"
                                        text="H3"
                                        value="h3" />
                                    <h4
                                        jcr:primaryType="nt:unstructured"
                                        text="H4"
                                        value="h4" />
                                    <h5
                                        jcr:primaryType="nt:unstructured"
                                        text="H5"
                                        value="h5" />
                                    <h6
                                        jcr:primaryType="nt:unstructured"
                                        text="H6"
                                        value="h6" />
                                </items>
                            </tagTitulo>
                        </items>
                    </tab-seo>
                </items>
            </Tabs>
        </items>
    </content>
</jcr:root>